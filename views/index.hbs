    <link rel="stylesheet" href="assets/css/style.css">

    
  </head>
  <body class="bg-light">
    
  {{>navbar}}

  <main class="container py-5">



  <div class="row" data-masonry='{"percentPosition": true }'>

    <!-- Inicio tarjeta -->
    <table class="table">
      <thead>
        <tr>
          <th class="col-1">Id</th>
          <th class="col-6">Producto</th>
          <th class="col-3">Costo</th>
          <th class="col-2 text-center">Acctiones</th>
        </tr>
      </thead>
      <tbody>
        {{#each productos}}
          <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.producto}}</td>
            <td>${{this.costo}}.-</td>
            <td class="d-flex justify-content-around">
              <a href="producto_editar/{{this.id}}" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
              <a href="eliminar/{{this.id}}" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></i></a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <!-- Fin tarjeta -->


  </div>

</main>

    <a  href="producto_nuevo" class="btn-flotante"><i class="fa-solid fa-plus"></i></a>

