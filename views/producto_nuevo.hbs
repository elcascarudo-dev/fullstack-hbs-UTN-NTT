  <body class="bg-light">
    
  {{>navbar}}

  <main class="container py-5">



  <div class="row d-flex justify-content-center">

    <!-- Inicio tarjeta -->
    <div class="col-sm-8 col-lg-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <section class="my-2 d-flex justify-content-between">
              <div class="ms-2 me-auto">
                <div class="fw-bold">Producto nuevo</div>
              </div>
              <a href="/" class="badge bg-danger p-2"><i class="fa-solid fa-ban"></i></a>
            </section>
          </h5>
          <hr>
          <p class="card-text">

            <form action="producto_nuevo" method="post">
              <div class="form-floating mb-3">
                <input name="producto" type="text" class="form-control" id="floatingInput" placeholder="producto" required>
                <label for="floatingInput">Producto</label>
              </div>
              <div class="form-floating">
                <input name="costo" type="number" class="form-control" id="floatingNumber" placeholder="Number" required>
                <label for="floatingNumber">Costo</label>
              </div>

              <button class="btn btn-primary mt-4" type="submit">Guardar</button>
            </form>

          </p>
        </div>
      </div>
    </div>
    <!-- Fin tarjeta -->


  </div>

</main>


